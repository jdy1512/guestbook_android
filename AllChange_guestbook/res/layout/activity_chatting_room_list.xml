<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/booking_btn_seletor1"
        android:gravity="center"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:padding="0dp"
        android:text="@string/chatting"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <ListView
        android:id="@+id/chattingRoomList_listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/main_search_gray"
        android:dividerHeight="1dp" >
    </ListView>

    <FrameLayout
        android:id="@+id/chattingRoomList_editchatroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grayback_btn_seletor" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="13dp"
                android:layout_weight="1"
                android:src="@drawable/btn_icon_1_normal" />

            <TextView
                android:id="@+id/chattingRoomList_editchatroom_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/edit_chatroom"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>