<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_search_gray" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <include layout="@layout/sign_in_top_to_img_1" />

                <include layout="@layout/sign_in_top_to_img_2" />

                <include layout="@layout/sign_in_top_to_img_3" />

                <include layout="@layout/sign_in_top_to_img_4" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/loginContainer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/SignUpLoginIn_btn_Facebook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#4f6cbd"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/facebookLoginImg"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:background="@drawable/sign_in_login_f" />

                <TextView
                    android:id="@+id/facebookLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="11dp"
                    android:text="sign in with\nfacebook"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/SignUpLoginIn_btn_Google"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#d7402a"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/googleLoginImg"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:background="@drawable/sign_in_login_g" />

                <TextView
                    android:id="@+id/googleLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="11dp"
                    android:text="sign in with\ngoogle"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/SignUpLoginIn_iv_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/splash"
        android:visibility="gone" />

</FrameLayout>