<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/feed_fragment_newsfeed"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/main_search_gray"
        android:divider="@null"
        android:dividerHeight="0px" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/feed_fragment_layout_trans"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/fedd_background"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/feed_fragment_btn_trans_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="17dp"
                android:src="@drawable/translate_delete" />

            <Spinner
                android:id="@+id/feed_fragment_spinner1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="9dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/translate_icon_change" />

            <Spinner
                android:id="@+id/feed_fragment_spinner2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/feed_fragment_btn_trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="17dp"
                android:src="@drawable/translate_icon_btn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <Button
                android:id="@+id/feed_fragment_btn_show_trans"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:background="@color/calendar_text_date_out_month"
                android:text="@string/translate"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/feed_fragment_editText"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:ems="10" >
            </EditText>

            <ToggleButton
                android:id="@+id/feed_fragment_button_write"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/main_feed_btn_seletor"
                android:textOff=" "
                android:textOn=" " />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>