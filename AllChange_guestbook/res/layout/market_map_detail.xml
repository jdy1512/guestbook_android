<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff"
    android:orientation="vertical" >

    <include
        android:id="@+id/market_map_detail_preview"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        layout="@layout/market_map_item" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/market_map_detail_image"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_margin="15dp"
                android:background="@color/bg_gray" />

            <TextView
                android:id="@+id/market_map_detail_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/main_search_btn_normal"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/market_map_detail_tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/main_feed_text"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/market_map_detail_tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/main_feed_text"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@color/main_search_gray" />

            <TextView
                android:id="@+id/market_map_detail_tv_overview_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/market_map_overview"
                android:textColor="@color/main_search_btn_normal"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/market_map_detail_tv_overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:lineSpacingExtra="5dp"
                android:textColor="@color/main_feed_text"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@color/main_search_gray" />

            <TextView
                android:id="@+id/market_map_detail_tv_info_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/market_map_intro"
                android:textColor="@color/main_search_btn_normal"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/market_map_detail_tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:lineSpacingExtra="5dp"
                android:textColor="@color/main_feed_text"
                android:textSize="13sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>