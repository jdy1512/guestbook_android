<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/picker_item_iv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/calendar_text_date_out_month"
            android:src="@drawable/range" />

        <TextView
            android:id="@+id/picker_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="33sp" />
    </FrameLayout>

    <ImageView
        android:id="@+id/picker_item_shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:src="@drawable/main_range_shadow"
        android:visibility="invisible" />

</LinearLayout>