<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_marginLeft="35dp"
        android:src="@color/main_darkgray" />

    <ImageView
        android:id="@+id/feed_backline"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="30dp"
        android:src="@color/main_darkgray" />

    <LinearLayout
        android:id="@+id/list_news_feed_Item_bubblebox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/message_bg_guest"
        android:orientation="vertical"
        android:padding="0dp" >

        <TextView
            android:id="@+id/list_news_feed_Item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/main_feed_name"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/list_news_feed_Item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:textColor="@color/main_feed_text"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/list_news_feed_Item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/feed_text_time"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/list_news_feed_Item_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/default_image" />

</FrameLayout>